<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#000000"
>

    <TextView
        android:id="@+id/Card_Balance_Text"
        android:text="Card Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b0b0b0"
        android:textSize="20dp"
        android:layout_marginTop="16dp"



        />

    <EditText
        android:id="@+id/Card_balance"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="#e8e8e8"
        android:textColor="#181818"
        android:layout_alignTop="@+id/Card_Balance_Text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:id = "@+id/InterestRate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter yearly Interest Rate (%)"
        android:textColor="#b0b0b0"
        android:textSize="16dp"
        android:layout_below="@+id/Card_Balance_Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/Interest_Rate"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="#e8e8e8"
        android:textColor="#181818"
        android:layout_alignBottom="@+id/InterestRate_text"
        android:layout_alignLeft="@+id/Card_balance"
        android:layout_alignStart="@+id/Card_balance" />


    <TextView
        android:id="@+id/Minimum_Payment_text"
        android:textColor="#b0b0b0"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Minimum payment ($)"
        android:layout_below="@+id/InterestRate_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"

        />

    <EditText
        android:id="@+id/Minimum_Payment"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="#e8e8e8"
        android:textColor="#181818"
        android:layout_alignBottom="@+id/Minimum_Payment_text"
        android:layout_alignLeft="@+id/Interest_Rate"
        android:layout_alignStart="@+id/Interest_Rate" />


    <TextView
        android:id="@+id/Final_Card_Balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Card Balance ($)"
        android:textColor="#b0b0b0"
        android:textSize="16dp"
        android:layout_below="@+id/Minimum_Payment_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/FinalCard_Balance"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="#e8e8e8"
        android:textColor="#181818"
        android:layout_alignBottom="@+id/Final_Card_Balance_text"
        android:layout_alignLeft="@+id/Minimum_Payment"
        android:layout_alignStart="@+id/Minimum_Payment"
        />

    <TextView
        android:id="@+id/Months_Remaining_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Months Remaining"
        android:textColor="#b0b0b0"
        android:textSize="16dp"
        android:layout_below="@+id/Final_Card_Balance_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/MonthsRemaining"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="#e8e8e8"
        android:textColor="#181818"
        android:layout_alignBottom="@+id/Months_Remaining_text"
        android:layout_alignLeft="@+id/FinalCard_Balance"
        android:layout_alignStart="@+id/FinalCard_Balance"
        />

    <TextView
        android:id="@+id/Interest_paid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest Paid Will Be ($)"
        android:textColor="#b0b0b0"
        android:textSize="16dp"
        android:layout_below="@+id/Months_Remaining_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"

        />

    <EditText
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/InterestPaid"
        android:background="#e8e8e8"
        android:textColor="#181818"
        android:layout_alignBottom="@+id/Interest_paid_text"
        android:layout_alignLeft="@+id/MonthsRemaining"
        android:layout_alignStart="@+id/MonthsRemaining"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="COMPUTE"
        android:id="@+id/button_Compute"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/Interest_paid_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_Clear"
        android:text="CLEAR"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_Compute"
        android:layout_centerHorizontal="true"

        />


</RelativeLayout>
